        _book = book;
        _chapter = chapter;
        _verse = verse;
        _endVerse = endverse;
    }
    public Reference()
    {
        _book = book;
        _chapter = chapter;
        _verse = startverse;
        _endVerse = endverse;
    }
    public string getDislayText()
    {
        return $"{_book} {_chapter} {_verse}";
